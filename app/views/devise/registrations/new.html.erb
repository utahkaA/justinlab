<div class="container">

<%= form_for(resource, html: {class: 'sign-form'}, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <h2 class="sign-form-heading">Sign up</h2>
  <br/>
  <div class="field">
    <%= f.email_field :email, :class => "form-control", autofocus: true, :placeholder => "Email address" %>
  </div>
  <br/>
  <div class="field">
    <%= f.password_field :password, :class => "form-control", autocomplete: "off", :placeholder => @minimum_password_length ? @minimum_password_length.to_s  + " characters minimum" : "password" %>
  </div>

  </br>
  <div class="field">
    <%= f.password_field :password_confirmation, :class => "form-control", autocomplete: "off", :placeholder => "Password confirmation" %>
  </div>
  <br/>
  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>
  <div class="actions">
    <%= f.submit "Sign up", :class => "btn btn-primary btn-block" %>
  </div>
<% end %>
<center><%= render "devise/shared/links" %></center>

</div>
